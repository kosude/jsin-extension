{
	"name": "jSin",
	"description": "Your average JavaScript injector.",
	"manifest_version": 3,

	"icons": {
		"16": "./jsin/16x16.png",
		"32": "./jsin/32x32.png",
		"48": "./jsin/48x48.png",
		"64": "./jsin/64x64.png",
		"128":"./jsin/128x128.png"
	},

	"action": {
		"default_title": "jSin, your average JavaScript injector",
		"default_icon": "./jsin/32x32.png",

        "default_popup": "./popup.html"
	},

	"permissions": [
		"activeTab",
		"storage",
		"tabs"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "jsin@jabenuk"
		}
	},

	"version": "$pkgVersion"
}
